# VidGo Backend Environment Variables
# Copy this file to .env and fill in your values
# NEVER commit .env to version control!

# ===================
# Database
# ===================
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/vidgo

# ===================
# Redis
# ===================
REDIS_URL=redis://localhost:6379/0

# ===================
# Security
# ===================
SECRET_KEY=your-super-secret-key-change-this-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ===================
# AI Services
# ===================
# Gemini API (Content Moderation) - Get from: https://ai.google.dev/
GEMINI_API_KEY=

# Leonardo AI (Primary Video Generation) - Get from: https://leonardo.ai/
LEONARDO_API_KEY=

# Runway (Backup Video Generation) - Get from: https://runway.ml/
RUNWAY_API_KEY=

# Pollo AI (Premium Features) - Get from: https://pollo.ai/
POLLO_API_KEY=

# GoEnhance (Style Transformation) - Get from: https://goenhance.ai/
GOENHANCE_API_KEY=

# ===================
# Payment - ECPay (Taiwan)
# ===================
# Get credentials from: https://www.ecpay.com.tw/
ECPAY_MERCHANT_ID=
ECPAY_HASH_KEY=
ECPAY_HASH_IV=
# Use stage URL for testing, production URL for live
ECPAY_PAYMENT_URL=https://payment-stage.ecpay.com.tw/Cashier/AioCheckOut/V5

# ===================
# Payment - Paddle (International)
# ===================
# Get credentials from: https://paddle.com/
PADDLE_API_KEY=
PADDLE_PUBLIC_KEY=

# ===================
# Object Storage (S3-compatible)
# ===================
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT=

# ===================
# App Settings
# ===================
DEBUG=true
WATERMARK_TEXT=VidGo Demo
